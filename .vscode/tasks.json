{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file", // Name of the task
            "command": "C:\\MinGW\\bin\\g++.exe",       // Uses g++ for compiling C++ files
            "args": [
                "-fdiagnostics-color=always",           // Colored compiler output
                "-g",                                   // Generate debug info
                "${file}",                              // Input: current file
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe" // Output exe in same dir
            ],
            "options": {
                "cwd": "${fileDirname}"                 // Run in the file's directory
            },
            "problemMatcher": [
                "$gcc"                                  // Matches and shows errors in Problems tab
            ],
            "group": {
                "kind": "build",
                "isDefault": true                       // This will run on Ctrl+Shift+B
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
